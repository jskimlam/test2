    <script>
        const map = L.map('map', { zoomControl: false }).setView([25, 40], 3);
        L.tileLayer('https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png').addTo(map);

        function toggleSidebar() { document.getElementById('sidebar').classList.toggle('hidden'); }
        function resetMapView() { map.flyTo([25, 40], 3); }

        // JSON ë°ì´í„° ë¶ˆëŸ¬ì˜¤ê¸°
        fetch('data.json')
            .then(res => res.json())
            .then(data => {
                const globalTotal = data.plants.reduce((sum, p) => sum + p.capacity, 0);
                document.getElementById('global-total').innerText = globalTotal.toLocaleString();
                
                const nested = {};
                data.plants.forEach(p => {
                    if (!nested[p.region]) nested[p.region] = { capa: 0, countries: {} };
                    if (!nested[p.region].countries[p.country]) nested[p.region].countries[p.country] = { capa: 0, plants: [] };
                    nested[p.region].capa += p.capacity;
                    nested[p.region].countries[p.country].capa += p.capacity;
                    nested[p.region].countries[p.country].plants.push(p);

                    // ì§€ë„ ë§ˆì»¤ ìƒì„±
                    const isIssue = p.status !== 'Normal';
                    const color = isIssue ? '#1A1A1B' : '#1597BB';
                    const marker = L.circleMarker([p.lat, p.lng], {
                        radius: Math.sqrt(p.capacity) * 1.3, fillColor: color, color: '#fff', weight: 1.5, fillOpacity: 0.8
                    }).addTo(map);
                    marker.bindPopup(`<b>${p.company}</b><br>Capa: ${p.capacity}K<br>Status: ${p.status}`);
                    p._m = marker;
                });

                // ì•„ì½”ë””ì–¸ UI ìƒì„±
                const container = document.getElementById('list-container');
                Object.entries(nested).sort((a,b)=>b[1].capa - a[1].capa).forEach(([rName, rData]) => {
                    const rPct = ((rData.capa / globalTotal) * 100).toFixed(1);
                    const rDiv = document.createElement('div');
                    rDiv.className = 'region-group';
                    rDiv.innerHTML = `<div class="region-header" onclick="this.parentElement.classList.toggle('open'); map.flyTo([${rData.countries[Object.keys(rData.countries)[0]].plants[0].lat}, ${rData.countries[Object.keys(rData.countries)[0]].plants[0].lng}], 4)">
                        <span>${rName}</span><span>${rData.capa.toLocaleString()}K (${rPct}%)</span></div>`;
                    
                    const cGroup = document.createElement('div');
                    cGroup.className = 'country-group';
                    Object.entries(rData.countries).sort((a,b)=>b[1].capa - a[1].capa).forEach(([cName, cData]) => {
                        const cPct = ((cData.capa / globalTotal) * 100).toFixed(1);
                        const cDiv = document.createElement('div');
                        cDiv.className = 'country-item';
                        cDiv.innerHTML = `<div class="country-header" onclick="this.parentElement.classList.toggle('open'); map.flyTo([${cData.plants[0].lat}, ${cData.plants[0].lng}], 5)">
                            <span>${cName}</span><span>${cData.capa.toLocaleString()}K (${cPct}%)</span></div>`;
                        
                        const pList = document.createElement('div');
                        pList.className = 'plant-list';
                        cData.plants.forEach(p => {
                            const isIssue = p.status !== 'Normal';
                            const card = document.createElement('div');
                            card.className = `plant-card ${isIssue ? 'issue' : ''}`;
                            card.innerHTML = `<span>${p.company}</span><span class="badge ${isIssue?'black':''}">${p.status}</span><br><small>${p.capacity}K MT/Y</small>`;
                            card.onclick = (e) => { e.stopPropagation(); map.flyTo([p.lat, p.lng], 9); setTimeout(()=>p._m.openPopup(), 1600); };
                            pList.appendChild(card);
                        });
                        cDiv.appendChild(pList);
                        cGroup.appendChild(cDiv);
                    });
                    rDiv.appendChild(cGroup);
                    container.appendChild(rDiv);
                });
            });
    </script>
